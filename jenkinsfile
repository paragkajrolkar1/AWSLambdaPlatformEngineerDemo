//create jenkinsfile for following stages: Checkout, maven build, test, deploy and cleanup

pipeline {
    agent any
    stages {
        stage('Checkout') {
            checkout([$class: 'GitSCM', Branches: [[name: '*/master']], DoGenerateSubmoduleConfigurations: false, Extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'https://github.com/paragkajrolkar1/AWSLambdaPlatformEngineerDemo.git']]])
        }
        stage('Maven Build') {
            //add steps for unix as well as non unix systems
            withMaven(maven: 'Maven 3.9.8') {
                if (isUnix()) {
                    sh 'mvn -B -DskipTests clean package'
                } else {
                    bat 'mvn -B -DskipTests clean package'
                }
            }

        }
        stage('Test') {
            steps {
                    sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
               // sh 'aws s3 cp target/AWSLambdaPlatformEngineerDemo-1.0-SNAPSHOT.jar s3://paragkajrolkar1'
            }
        }
        stage('Cleanup') {
            steps {
                sh 'mvn clean'
            }
        }
    }
}

